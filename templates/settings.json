{
  "permissions": {
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(git *)",
      "Bash(git commit:*)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(mv *)",
      "Bash(echo *)",
      "Bash(tmux *)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.question-review/scripts/set-pane-title.sh",
            "async": true
          }
        ]
      }
    ]
  }
}
