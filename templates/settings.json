{
  "permissions": {
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Glob(*)",
      "Grep(*)",
      "Bash(git *)",
      "Bash(git commit:*)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(mv *)",
      "Bash(echo *)",
      "Bash(tmux *)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "Q=$(git branch --show-current 2>/dev/null); Q=${Q#worktree-}; [ -n \"$Q\" ] && { T=$(tmux display-message -p '#{pane_title}' 2>/dev/null); T=\"${T#$Q - }\"; tmux select-pane -T \"$Q - $T\" 2>/dev/null; }; exit 0",
            "async": true
          }
        ]
      }
    ]
  }
}
